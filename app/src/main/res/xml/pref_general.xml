<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_setting_block_calls"
        android:summary="@string/pref_description_setting_block_calls"
        android:title="@string/pref_title_setting_block_calls" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_setting_mobile_notification"
        android:summary="@string/pref_description_setting_mobile_notification"
        android:title="@string/pref_title_setting_mobile_notification" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_setting_email_notification"
        android:summary="@string/pref_description_setting_email_notification"
        android:title="@string/pref_title_setting_email_notification" />

    <ListPreference
        android:defaultValue="4"
        android:entries="@array/audio_files_last_titles"
        android:entryValues="@array/audio_files_last_values"
        android:key="@string/pref_key_setting_delete_weeks"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_setting_delete_weeks"
        android:summary="@string/pref_description_setting_delete_weeks"/>

</PreferenceScreen>
